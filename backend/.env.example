# Copy to .env.local and adjust credentials for your environment
# Values below target a local developer workstation; replace secrets and URLs for staging/prod deployments.

ENV=dev
DEBUG=true
DATABASE_URL=sqlite+aiosqlite:///./dev.db
# DATABASE_URL=postgresql+asyncpg://postgres:1234@localhost:5432/retail_pos
DATABASE_ECHO=false

ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_MINUTES=10080
JWT_SECRET_KEY=CHANGE_ME
JWT_ISSUER=retail-pos

CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true
ALLOWED_HOSTS=localhost,127.0.0.1

ENABLE_TRACING=false
